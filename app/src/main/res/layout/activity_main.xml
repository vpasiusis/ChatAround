<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/feed_bg">


    <EditText
        android:id="@+id/enterTextid"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/sendButtonId"
        android:layout_toLeftOf="@+id/sendButtonId"
        android:layout_toEndOf="@+id/uploadButtonId"
        android:layout_toRightOf="@+id/uploadButtonId"
        android:ems="10"
        android:hint="Type here.."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/uploadButtonId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:onClick="uploadImage"
        android:text="+" />

    <Button
        android:id="@+id/sendButtonId"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:onClick="sendMessage"
        android:text="Send" />

    <ListView
        android:id="@+id/listview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterTextid"
        android:layout_marginBottom="1dp"/>

</RelativeLayout>