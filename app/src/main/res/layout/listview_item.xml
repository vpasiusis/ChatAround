<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/feed_item_margin_sides"
        android:layout_marginRight="@dimen/feed_item_margin_sides"
        android:layout_marginTop="@dimen/feed_item_margin_top_bottom"
        android:layout_marginBottom="@dimen/feed_item_margin_top_bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/feed_item_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/timestamp"
            android:paddingBottom="@dimen/feed_item_padding_time"
            android:textSize="@dimen/feed_item_time" />

        <TextView
            android:id="@+id/itemMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/feed_item_message" />

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:paddingTop="@dimen/feed_item_padding_image"/>
    </LinearLayout>

</LinearLayout>