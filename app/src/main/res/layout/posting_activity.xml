<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PostingActivity"
    android:background="@color/feed_bg">


    <android.support.v7.widget.Toolbar
        android:id="@+id/posting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/com_facebook_button_background_color_disabled"/>





    <EditText
        android:id="@+id/enterTextid2"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="11dp"
        android:layout_toStartOf="@+id/sendButtonId"
        android:layout_toLeftOf="@+id/sendButtonId"
        android:layout_toEndOf="@+id/uploadButtonId"
        android:layout_toRightOf="@+id/uploadButtonId"
        android:ems="10"
        android:hint="Type here.."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/uploadButtonId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        android:text="+" />

    <Button
        android:id="@+id/sendButtonId"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:text="Send" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        android:background="@color/com_facebook_button_background_color_disabled"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="442dp"
        android:layout_above="@+id/enterTextid2"
        android:layout_below="@+id/posting_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="43dp"
        android:text="ARKA CIA TU TVARKAI BLET"
        android:textSize="36sp"
        android:textStyle="bold" />


</RelativeLayout>